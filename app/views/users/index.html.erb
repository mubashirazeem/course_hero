              <h4>Get more Unlocks to access documents you need</h4>
              <a href="<%= new_pdf_path %>" class="btn btn-primary">Upload for Unlocks</a>
            </div>
          </div>
        </div>

        <div>
          <div>
            <h1 class="mb-4">Your uploads</h1>
          </div>
          <div class="d-flex flex-wrap">
            <% @pdfs.each do |pdf| %>
              <div class="card-container mb-4" style="width: 25%; margin-right: 20px; margin-bottom: 20px;">
                <div class="card" style="border-radius: 15px !important;">
                  <img src="<%= asset_path('pdf.png') %>" alt="Standard Image">
                  <div class="card-content" style="padding: 20px;">
                    <%= link_to pdf.title, pdf_path(pdf) %> <br>
                    <%= pdf.doc_type.name %> <br>
                    <%= pdf.course_name %> <br>
