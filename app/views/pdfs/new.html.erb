<div class="pdfupload">
  <div class="pdf-header"> 
    <div class="text-center">
      <h1 class="font-weight-bold mb-3">Upload to earn unlocks.</h1>
      <h5 id="pdf-header-margin">Upload 10 of your own documents to earn 5 unlock credits. Use them for accessing over 100 million study resources.</h5>
    </div>
  </div>

  <div class="d-flex justify-content-center" style="width: 100%;">
    <div class="card rounded shadow-lg p-3 bg-white custom-rounded" style="width: 50%;">
      <div class="index-border">
        <%= form_for(@pdf, html: { multipart: true }) do |form| %>
          <div class="form-group row">
            <div class="col-md-12 mx-auto p-3 border-b mb-2">
              <p class="margin-upload"  style="display: inline;">To get unlocks faster, upload exams, assignments, and lecture notes.</p>
              <%= form.submit 'Upload PDF', class: 'margin-upload btn btn-primary btn-upload' %>
            </div>

            <div class="col-md-4">
              <%= form.label :course_name, class: 'mb-0' %>
              <%= form.text_field :course_name, class: 'form-control' %>
            </div>

            <div class="col-md-4">
              <%= form.label :subject, class: 'mb-0' %>
              <%= form.text_field :subject, class: 'form-control' %>
            </div>

            <div class="col-md-4">
              <%= form.label :doc_type_id, class: 'mb-0' %>
              <%= form.collection_select :doc_type_id, DocType.all, :id, :name, { prompt: 'Select Doc Type' }, class: 'form-control' %>
            </div>

            <div class="col-md-4">
              <%= form.label :document, class: 'mb-0' %>
              <%= form.file_field :document, class: 'form-control-file' %>
            </div>
          </div>
        <% end %>  
      </div>  
    </div>
  </div>
  
  <div class="d-flex justify-content-center first-div mt-4 "  style="width: 100%;">
    <div class="card rounded bg-white card-footer" style="width: 50%;">
      <div> By uploading, you agree to comply with our Honor Code and Copyright Policy.</div>
      <div> Your document will be shared on Learneo Platforms, enriched, and used to extract content to assist in studying.</div>
    </div>
  </div>

  <div class="second-div d-flex justify-content-center">
    <div>
      <h2>It's easy to share.</h2>
    </div>
  </div>

</div>